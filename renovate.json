{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/go-just.Dockerfile/"
      ],
      "matchStrings": [
        "--tag (?<currentValue>[\\d.]+)"
      ],
      "depNameTemplate": "casey/just",
      "datasourceTemplate": "github-tags"
    }
  ],
  "packageRules": [
    {
      "matchPackageNames": ["*"],
      "automerge": true
    }
  ]
}
